<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent" android:background="#00a5ef">

    <Button
            android:layout_width="408dp"
            android:layout_height="wrap_content"
            android:text="Home"
            android:id="@+id/btn_home_im"
            android:layout_centerHorizontal="true" android:layout_alignParentBottom="true" android:onClick="homeIM"/>
    <WebView
            android:layout_width="fill_parent"
            android:layout_height="320dp"
            android:id="@+id/webView_im"
            android:layout_alignParentLeft="true" android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/btn_home_im"/>
</RelativeLayout>