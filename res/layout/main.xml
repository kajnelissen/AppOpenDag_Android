<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:background="#00a5ef" android:baselineAligned="false">
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Open dag app"
            android:textColor="#005baa" android:layout_alignParentLeft="true" android:layout_marginLeft="0dp"
            android:layout_alignParentTop="true" android:layout_marginTop="0dp" android:id="@+id/textView1"/>
    <Button
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:text="(Technische) Informatica"
            android:id="@+id/button" android:layout_gravity="center_vertical|left" android:background="#00a5ef"
            android:clickable="true" android:textColor="#000000" android:textColorHighlight="#000000"
            android:shadowColor="#0077c0"
            android:layout_alignLeft="@+id/textView1" android:layout_below="@+id/textView1"/>
    <Button
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:text="Network Infrastructuur Design"
            android:id="@+id/button1" android:layout_gravity="left|center_vertical" android:background="#00a5ef"
            android:layout_toRightOf="@+id/button" android:layout_below="@+id/textView1" android:clickable="true"/>
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:text="Faculteit ICT"
            android:id="@+id/textView" android:layout_gravity="center" android:textSize="@android:dimen/app_icon_size"
            android:gravity="center" android:layout_alignLeft="@+id/textView1" android:layout_above="@+id/button2"/>
    <Button
            android:layout_width="165dp"
            android:layout_height="140dp"
            android:text="Dagprogramma"
            android:id="@+id/button2" android:layout_gravity="left|center_vertical"
            android:layout_weight="0.45"
            android:layout_alignParentLeft="true" android:layout_alignParentBottom="true"/>
    <Button
            android:layout_width="165dp"
            android:layout_height="140dp"
            android:text="Studiewijzer"
            android:id="@+id/button3"
            android:layout_alignParentLeft="true" android:layout_marginLeft="160dp"
            android:layout_alignTop="@+id/button2" android:layout_marginTop="0dp" android:layout_marginRight="0dp"
            />
    <Button
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:text="Information Management"
            android:id="@+id/button4" android:layout_toRightOf="@+id/button1" android:layout_below="@+id/textView1"
            android:background="#00a5ef" android:clickable="true"/>
    <Button
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:text="Navagatie"
            android:id="@+id/button5" android:layout_alignRight="@+id/button" android:layout_below="@+id/button"
            android:background="#00a5ef" android:clickable="true"/>
    <Button
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:text="Contact"
            android:id="@+id/button6" android:layout_toRightOf="@+id/button" android:layout_below="@+id/button"
            android:background="#00a5ef" android:clickable="true"/>
    <Button
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:text="Foto gallerij"
            android:id="@+id/button7" android:layout_toRightOf="@+id/button1" android:layout_below="@+id/button"
            android:background="#00a5ef" android:clickable="true"/>
</RelativeLayout>

