<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:background="#00a5ef" android:baselineAligned="false">
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Open dag app"
            android:textColor="#005baa" android:layout_alignParentLeft="true" android:layout_marginLeft="0dp"
            android:layout_alignParentTop="true" android:layout_marginTop="0dp" android:id="@+id/textView1"/>
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:text="Faculteit ICT"
            android:id="@+id/textView" android:layout_gravity="center" android:textSize="@android:dimen/app_icon_size"
            android:gravity="center"
            android:layout_alignLeft="@+id/textView1" android:layout_above="@+id/btn_dp"/>
    <Button
            android:layout_width="160dp"
            android:layout_height="140dp"
            android:text="Dagprogramma"
            android:id="@+id/btn_dp" android:layout_gravity="left|center_vertical"
            android:layout_weight="0.45"
            android:layout_alignParentLeft="true" android:layout_alignParentBottom="true"
            android:onClick="dagProgramma"/>
    <Button
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:text="Studiewijzer"
            android:id="@+id/btn_sw"
            android:layout_alignLeft="@+id/btn_contact" android:layout_alignParentTop="true"
            android:layout_marginTop="22dp" android:background="#00a5ef" android:onClick="studiewijzer"/>
    <Button
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:text="Navigatie"
            android:id="@+id/btn_nvg"
            android:background="#00a5ef" android:clickable="true"
            android:layout_toRightOf="@+id/btn_fg" android:layout_above="@+id/textView" android:onClick="QRscanner"/>
    <Button
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:text="Contact"
            android:id="@+id/btn_contact"
            android:background="#00a5ef" android:clickable="true"
            android:layout_alignParentLeft="true" android:layout_marginLeft="6dp" android:layout_above="@+id/textView"/>
    <Button
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:text="Foto gallerij"
            android:id="@+id/btn_fg"
            android:background="#00a5ef" android:clickable="true"
            android:layout_toRightOf="@+id/btn_sw" android:layout_above="@+id/textView" android:onClick="Fotogallerij"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ICT Studie"
            android:id="@+id/btn_AlleStudies" android:layout_toRightOf="@+id/btn_dp" android:layout_below="@+id/textView"
            android:layout_alignRight="@+id/textView1" android:layout_alignBottom="@+id/btn_dp"
            android:onClick="alleStudies" />
    <Button
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:text="Zuyd Hogeschool"
            android:id="@+id/btn_zuyd" android:layout_toLeftOf="@+id/btn_nvg" android:layout_alignParentTop="true"
            android:layout_marginTop="27dp" android:background="#00a5ef" android:clickable="true"
            android:onClick="zuyd"/>
</RelativeLayout>

