<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent" android:background="#00a5ef">

    <WebView
            android:layout_width="fill_parent"
            android:layout_height="300dp"
            android:id="@+id/webView_dp"
            android:layout_alignParentLeft="true" android:layout_alignParentTop="true" android:layout_above="@+id/btn_home_dp"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Home"
            android:id="@+id/btn_home_dp"
            android:layout_alignLeft="@+id/webView_dp" android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/webView_dp" android:onClick="home"/>
</RelativeLayout>